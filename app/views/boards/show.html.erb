<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>

    <hr>
    <h2> Add a new post </h2>
    <form action="/insert_post" method="post">
      <div><label for="tite_field">Title</label>
        <input id= "tite_field" type="text" name="title">
      </div>
      <div><label for="body_field">Body</label>
        <textarea name="body" id="body_field"></textarea>
      </div>
      <div><label for="expires_on_field">Expires On</label>
        <input type="date" id="expires_on_field" name="expires_on">
      </div>

    </div>
    <div><label for="board_id_field"> Board ID </label>
      <input type="text" id="board_id_field" name="expires_on">
    </div>

    <button>Add post</button>
  </form>

  <hr>

  <div>
    <div>
      <h2>
        Edit board
      </h2>

      <form action="/modify_board/<%= @the_board.id %>"  method="post" >
        <div>
          <label for="name_box">
            Name
          </label>

          <input type="text" id="name_box" name="query_name" value="<%= @the_board.name %>">
        </div>

        <button>
          Update board
        </button>
      </form>
    </div>
  </div>

  <hr>
